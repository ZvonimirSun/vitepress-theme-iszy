{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "node",
    "src/node.ts",
    "src/utils/node",
    "uno.config.*",
    "tsup.config.*"
  ],
  "compilerOptions": {
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],

    "paths": {
      "@zvonimirsun/vitepress-theme/types": ["./types/index.d.ts"],
      "@zvonimirsun/vitepress-theme/node": ["./node/node.js"],
      "@zvonimirsun/vitepress-theme": ["./src/index.ts"]
    }
  }
}
